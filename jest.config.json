{
  "testEnvironment": "node",
  "testRunner": "jasmine2",
  "testTimeout": 60000,
  "testSequencer": "<rootDir>/packages/server/jest.sequencer.js",
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "transform": {
    "^.+\\.(js|ts)$": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "moduleNameMapper": {
    "\\.css$": "identity-obj-proxy"
  },
  "testMatch": [
    "**/src/**/*.test.ts",
    "**/src/**/*.test.tsx"
  ],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "**/src/**/*.ts",
    "**/src/**/*.tsx",
    "!**/*.d.ts",
    "!**/*.stories.tsx",
    "!**/webpack.config.js",
    "!**/stories/**",
    "!**/jest.sequencer.js",
    "!packages/core/src/fhir/**/*.ts",
    "!packages/generator/**/*.ts",
    "!packages/server/src/migrations/**/*.ts"
  ],
  "projects": [
    "packages/app",
    "packages/core",
    "packages/infra",
    "packages/server",
    "packages/ui"
  ]
}