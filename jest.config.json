{
  "testEnvironment": "node",
  "testRunner": "jasmine2",
  "transform": {
    "^.+\\.(js|ts)$": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "moduleNameMapper": {
    "\\.css$": "identity-obj-proxy"
  },
  "testMatch": [
    "**/src/**/*.test.ts",
    "**/src/**/*.test.tsx"
  ],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.d.ts",
    "!src/stories/**/*.tsx"
  ],
  "projects": [
    "packages/console",
    "packages/core",
    "packages/generator",
    "packages/infra",
    "packages/server",
    "packages/ui"
  ]
}