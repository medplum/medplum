{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["NODE_VERSION"],
  "tasks": {
    "clean": {
      "outputs": ["build/**", "dist/**", "coverage/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**", ".next/**"],
      "env": [
        "MEDPLUM_BASE_URL",
        "MEDPLUM_CLIENT_ID",
        "MEDPLUM_REGISTER_ENABLED",
        "GOOGLE_CLIENT_ID",
        "RECAPTCHA_SITE_KEY"
      ]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    }
  }
}
