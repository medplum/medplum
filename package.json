{
  "name": "root",
  "version": "4.1.6",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=!@medplum/docs --filter=!./examples/*",
    "build:all": "turbo run build",
    "build:docs": "turbo run build --filter=@medplum/docs",
    "build:fast": "turbo run build --filter=@medplum/app --filter=@medplum/server",
    "clean": "turbo run clean",
    "lint": "turbo run lint --filter=!@medplum/docs",
    "prettier": "prettier --write \"**/*.{ts,tsx,cts,mts,js,jsx,cjs,mjs,json}\"",
    "sort-package-json": "sort-package-json package.json \"packages/*/package.json\" \"examples/*/package.json\"",
    "test": "turbo run test --filter=!@medplum/docs"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ],
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@medplum/eslint-config"
    ],
    "root": true
  },
  "overrides": {
    "es5-ext": "0.10.53",
    "esbuild": "0.25.5",
    "formidable": "3.5.4",
    "got": "11.8.6",
    "react": "19.1.0",
    "react-compiler-runtime": "latest",
    "react-dom": "19.1.0",
    "react-native": "0.79.3",
    "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@1.4.15",
    "trim": "0.0.3",
    "whatwg-url": "14.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@babel/preset-env": "7.27.2",
    "@babel/preset-react": "7.27.1",
    "@babel/preset-typescript": "7.27.1",
    "@microsoft/api-documenter": "7.26.27",
    "@microsoft/api-extractor": "7.52.8",
    "@types/node": "20.19.0",
    "babel-jest": "29.7.0",
    "babel-preset-vite": "1.1.3",
    "cross-env": "7.0.3",
    "esbuild": "0.25.5",
    "formidable": "3.5.4",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jsdom": "26.1.0",
    "npm-check-updates": "18.0.1",
    "nyc": "17.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "rimraf": "6.0.1",
    "sort-package-json": "3.2.1",
    "source-map-explorer": "2.5.3",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "turbo": "2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=20.0.0"
  }
}
