{
  "testEnvironment": "jsdom",
  "testTimeout": 120000,
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "esbuild-jest"
  },
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "testMatch": ["**/src/**/*.test.ts"],
  "coverageDirectory": "coverage",
  "coverageReporters": ["json", "text"],
  "collectCoverageFrom": ["**/src/**/*.ts"]
}
