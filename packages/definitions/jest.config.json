{
  "testEnvironment": "node",
  "testRunner": "jasmine2",
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
  },
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "testMatch": ["**/src/**/*.test.ts"],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": ["json"],
  "collectCoverageFrom": ["**/src/**/*"]
}
